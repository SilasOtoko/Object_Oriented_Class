package shipHull;

public class SailBoat {
	private double hullSpeed;
	private String boatName;
		public String getBoatName(){return boatName;}
		public void setBoatName(String value){boatName = value;}
	private int length;
		public int getLength(){return length;}
		public void setLength(int value)
		{
			if(value >= 0)
			{
				length = value;
			}
			else
			{
				System.err.println("invalid length");
				System.err.println("length set to 0");
				length = 0;
			}
		}
	
	
	
		
		public SailBoat(String name, int feet)
		{
			setBoatName(name);
			setLength(feet);
		}
		
		public double calculateHullSpeed()
		{
			if(length > 0)
			{
			return hullSpeed = 1.34 * (Math.sqrt(length));
			}
			else
			{
				return 0;
			}
		}
		
		@Override
		public String toString()
		{
			return getBoatName() + "\n has a hull size of " + getLength() + "ft.\n and its hull speed is " + hullSpeed;
		}
		
		public boolean equals(SailBoat other)
		{
			if(getBoatName().equals(other.getBoatName()) && getLength() == other.getLength())
			{
				return true;
			}
			else
			{
				return false;
			}
		}
}
